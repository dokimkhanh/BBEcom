@model Models.EF.Giftcard
@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">

        @using (Html.BeginForm("Edit", "Gift", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true);

            <div class="form-horizontal">
                <h4>Thêm code mới</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row col-md-12">
                    <div class="mb-3 col-md-12">
                        <label for="productId" class="form-label col-md-2">Sản phẩm</label>
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.ProductId, ViewBag.productID as SelectList, "Chọn danh mục", new { @class = "form-control" })

                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label col-md-2">Code</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>



                <div class="row">
                    <div class="mb-3">
                        <div class="col-md-offset-2 col-md-12">
                            <button type="submit" class="btn btn-primary">Sửa giftcard</button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    </div>
</div>