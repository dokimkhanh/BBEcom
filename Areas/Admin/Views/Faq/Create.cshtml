@model Models.EF.Faq

@{
    ViewBag.Title = "Thêm FAQ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">

        @using (Html.BeginForm("Create", "Faq", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true);

            <div class="form-horizontal">
                <h4>FAQ</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" }, @id = "txtAns" })
                        @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary">THÊM CÂU HỎI MỚI</button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    </div>
</div>

