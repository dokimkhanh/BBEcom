@model Models.EF.Product
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title-area">
    <div class="container">
        <div class="page-title-content">
            <h1>@Model.Name</h1>
            <ul>
                <li><a href="/">Trang chủ</a></li>
                <li class="text-black fw-normal">Sản phẩm</li>
                <li>@Model.Name</li>
            </ul>
        </div>
    </div>
</div>


<div class="products-details-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-12">
                <div class="products-details-thumbs-image">
                    <img src="@Model.Images" alt="image" width="100%">
                </div>
            </div>
            <div class="col-lg-7 col-md-12">
                <div class="products-details-desc">
                    <h3>@Model.Name</h3>
                    <div class="price">
                        @if (Model.PriceSale > 0)
                        {
                            <span class="new-price">@KeyShop.Common.CommonHelper.ConvertMoney(Model.PriceSale.Value)đ</span>
                            <span class="old-price">@KeyShop.Common.CommonHelper.ConvertMoney(Model.Price)đ</span>
                        }
                        else
                        {
                            <span class="new-price">@KeyShop.Common.CommonHelper.ConvertMoney(Model.Price)đ</span>
                        }

                    </div>
                    <div class="rating">
                        <i class='bx bxs-star'></i>
                        <i class='bx bxs-star'></i>
                        <i class='bx bxs-star'></i>
                        <i class='bx bxs-star'></i>
                        <i class='bx bxs-star'></i>
                    </div>
                    <p>Mỗi sản phẩm đều có hướng dẫn sử dụng bên dưới, trong trường hợp code hết hạn hoặc không sử dụng được vui lòng liên hệ hỗ trợ. Sau khi mua code sẽ được gửi qua email của khách hàng và lưu vào trong lịch sử mua hàng.</p>
                    <div class="products-add-to-cart">
                        <div class="input-counter">
                            <span class="minus-btn"><i class='bx bx-minus'></i></span>
                            <input type="text" value="1">
                            <span class="plus-btn"><i class='bx bx-plus'></i></span>
                        </div>
                        <button type="submit" class="default-btn"><span>Thêm</span></button>
                    </div>
                    <br />
                    <ul class="products-info">
                        <li><span>SKU:</span> KSP@(Model.Id)</li>
                        <li><span>Danh mục:</span> <a href="/danh-muc/@Model.Category.Alias-@Model.Category.Id">@Model.Category.Name</a></li>
                        <li><span>Còn lại:</span> Kho (7 code)</li>
                    </ul>
                    <div class="products-share">
                        <ul class="social">
                            <li><span>Chia sẻ sản phẩm:</span></li>
                            <li><a href="#" class="facebook" target="_blank"><i class='bx bxl-facebook'></i></a></li>
                            <li><a href="#" class="twitter" target="_blank"><i class='bx bxl-twitter'></i></a></li>
                            <li><a href="#" class="linkedin" target="_blank"><i class='bx bxl-linkedin'></i></a></li>
                            <li><a href="#" class="instagram" target="_blank"><i class='bx bxl-instagram'></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12">
                <div class="products-details-tabs">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="false">Chi tiết sản phẩm</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="description" role="tabpanel">
                            @Html.Raw(Model.Detail)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


